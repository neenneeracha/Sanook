{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "@next/next/no-img-element": "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "useTabs": false,
        "tabWidth": 2,
        "singleQuote": true,
        "semi": false,
        "trailingComma": "all",
        "jsxBracketSameLine": false
      }
    ]
  }
}